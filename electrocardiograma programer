////////////PROGRAMACION DEL ELECTRO CON SD

#include <SPI.h>
#include <SD.h>
#include <SoftwareSerial.h>

SoftwareSerial myserial(3, 4); //RX, TX se conectan inversos en las placas
int sensor;

const int chipSelect = 8;
int i, num_muestras = 1000;

void setup() {
  Serial.begin(9600); //Comunicación de sd y sensor
  myserial.begin(9600); // Comunicación con Bluetooth
  while (!Serial) {
    ; // wait for serial port to connect. Needed for native USB port only
  }

  Serial.print("Initializing SD card...");

  if (!SD.begin(chipSelect)) {
    Serial.println("Card failed, or not present");
    // don't do anything more:
    while (1);
  }
  Serial.println("card initialized.");
}

void loop() {
  sensor = analogRead(A0);
  Serial.println(sensor);
  String dataString = "";

  myserial.println(sensor); //Envia los datos a otro dispositivo haciendo un salto de linea
  //delay(500);

  /*
    for (i = 0; i < num_muestras; i++) {;
    dataString += String(sensor);
    delay(1000);
    }
    */

  File dataFile = SD.open("1datalog.txt", FILE_WRITE);

  if (dataFile){
    //dataFile.println(dataString);
    dataFile.println(sensor);
    dataFile.close();
    //Serial.println(dataString);
    Serial.println(sensor);
    delay(500);
  }
  else {
    Serial.println("error opening datalog.txt");
  }
